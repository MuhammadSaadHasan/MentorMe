<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <FrameLayout
            android:id="@+id/senderBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/text_background_sender"
         tools:ignore="MissingConstraints"> <!-- You need to create this drawable resource -->

            <TextView
                android:id="@+id/senderMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Your message here"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>