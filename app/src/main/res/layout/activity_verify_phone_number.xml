<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    tools:context=".MainActivity">

    <!-- Blue Background -->
    <View
        android:id="@+id/blueBackground"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/blue_flat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/textViewGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/verifyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="@string/VerifyYourPhoneNumber"
                android:textColor="@color/tealish"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sentCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/WeveSentACodEeTo923325618881"/>

            <!-- VERIFY BUTTON -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/LoginButtonID"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="105dp"
                android:background="@drawable/verify_button_bg_squircle_input"
                android:text="@string/Verify"
                android:textColor="@color/white" />



            <LinearLayout
                android:id="@+id/textViewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">


                <TextView
                    android:id="@+id/SendCodeAgainID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:text="@string/SendCodAgain"/>

                <TextView
                    android:id="@+id/TimeID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Dark_teal"
                    android:textStyle="bold"
                    android:text="@string/Time0020"/>

            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/view_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_shape" />

        <View
            android:id="@+id/view_circle2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape" />

        <View
            android:id="@+id/view_circle3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape" />

        <View
            android:id="@+id/view_circle4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape" />

        <View
            android:id="@+id/view_circle5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_shape" />
    </LinearLayout>




    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:padding="10dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_ripple"
        android:src="@drawable/num1"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toTopOf="@id/blueBackground"
        app:layout_constraintHorizontal_chainStyle="spread" />


    <ImageButton
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_ripple"
        android:src="@drawable/num2"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintTop_toTopOf="@id/button1" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:src="@drawable/num3"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button2" />


    <ImageButton
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:src="@drawable/num4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/num5"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintTop_toTopOf="@id/button4" />

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/num6"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button5" />

    <ImageButton
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/num7"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageButton
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/num8"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintTop_toTopOf="@id/button7" />

    <ImageButton
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/num9"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button8" />

    <ImageButton
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/num0"
        android:background="@drawable/button_ripple"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/button8"
        app:layout_constraintEnd_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button8" />

    <ImageButton
        android:id="@+id/buttonX"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_ripple"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/numx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>