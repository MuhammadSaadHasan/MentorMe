<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/another_light_blue_flat"
    tools:context=".JohnCoopersDMs">


    <!-- BLUE BACKGROUND-->
    <View
        android:id="@+id/blueBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/corners_from_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginStart="18dp">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/white_arrow" />


            <TextView
                android:id="@+id/hiJohncooperid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/JohnCooper"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/white" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/call_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/video_icon" />


        </LinearLayout>


        <FrameLayout
            android:id="@+id/textBackgroundFrameLayout3"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="330dp"
            android:layout_marginStart="230dp"
            android:background="@drawable/text_background_texter"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Hello, You there?" />

        </FrameLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="380dp">

                <ImageView
                    android:id="@+id/imageViewID2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/p1wy"
                    android:layout_marginTop="20dp" />

                <FrameLayout
                    android:id="@+id/textBackgroundFrameLayout2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_background_sender"
                    android:gravity="center"> <!-- This gravity attribute will not center the TextView inside FrameLayout -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        />

                </FrameLayout>

            </LinearLayout>



        <FrameLayout
            android:id="@+id/textBackgroundFrameLayout4"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="450dp"
            android:layout_marginStart="220dp"
            android:background="@drawable/text_background_texter"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="I need your guidance."
                android:textColor="@color/black"
                />

        </FrameLayout>




        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="500dp">

                <ImageView
                    android:id="@+id/imageViewID"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/p1wy"
                    android:layout_marginTop="20dp" />

                <FrameLayout
                    android:id="@+id/textBackgroundFrameLayout"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_background_sender"
                    android:gravity="center"> <!-- This gravity attribute will not center the TextView inside FrameLayout -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How can I help you?"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        />

                </FrameLayout>

            </LinearLayout>




        <FrameLayout
            android:id="@+id/searchbackground"
            android:layout_width="390dp"
            android:layout_height="110dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/all_corners_curved"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"

                android:padding="10dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:src="@drawable/paperclip" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:src="@drawable/gallery" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="15sp"
                    android:layout_marginEnd="80dp"
                    android:hint="Type Something..."
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    android:textColorHint="@color/white"
                    android:inputType="text" />


                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:src="@drawable/camera_icon" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:src="@drawable/mic" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:src="@drawable/send" />


        </LinearLayout>
    </FrameLayout>





</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>