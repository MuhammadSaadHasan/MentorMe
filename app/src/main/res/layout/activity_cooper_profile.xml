<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CooperProfile">


    <!-- Light Blue Background -->
    <View
        android:id="@+id/lightblueBackground"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/another_light_blue_flat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="50dp" />

    <!-- BLUE BACKGROUND-->
    <View
        android:id="@+id/blueBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/corners_from_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="70dp"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/hiJohncooperid"
                android:layout_width="215dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:text="@string/HIjohncooper"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="137dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cooperpfp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="215dp"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/jobtitle"
                android:layout_width="215dp"
                android:layout_height="100dp"
                android:text="@string/UXDesignerGoogle"
                android:textSize="30sp"
                android:textColor="@color/white" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/aboutmeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="@string/Aboutme"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/passnionateaboutID"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/Iampassionate"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/exppertieseincudeiD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyExpertise"
            android:textColor="@color/Dark_teal"
            android:layout_marginStart="18dp"
            android:layout_marginTop="450dp"
            android:textStyle="bold"
            android:textSize="20sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/careeradviceID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="500dp"
            android:layout_marginStart="25dp"
            android:textSize="13sp"
            android:background="@drawable/expertiesebackground"
            android:text="@string/CareerAdvice"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/useexperiencedesignID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:layout_marginTop="500dp"
            android:layout_marginStart="190dp"
            android:background="@drawable/expertiesebackground"
            android:text="@string/UserExperience"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leadershipID"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:layout_marginTop="550dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/expertiesebackground"
            android:text="@string/Leadership"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/prototypingID"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:layout_marginTop="550dp"
            android:layout_marginStart="160dp"
            android:background="@drawable/expertiesebackground"
            android:text="@string/Leadership"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="605dp"
            android:layout_marginStart="30dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dropreviewID"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="13sp"
                android:layout_marginStart="18dp"
                android:background="@drawable/yellowbuttonbackground"
                android:text="@string/Dropreview"
                android:textStyle="bold"
                android:textColor="@color/Dark_teal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/joincommunityID"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:background="@drawable/yellowbuttonbackground"
                android:text="@string/JoinCommunity"
                android:textStyle="bold"
                android:textColor="@color/Dark_teal" />
        </LinearLayout>



        <!-- Reset BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ResetButtonID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/verify_button_bg_squircle_input"
            android:text="@string/BookaSession"
            android:textColor="@color/white" />


</RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>