<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/another_light_blue_flat"
    tools:context=".DropReview">




    <!-- BLUE BACKGROUND-->
    <View
        android:id="@+id/blueBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="450dp"
        android:background="@drawable/corners_from_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/hiJohncooperid"
                android:layout_width="215dp"
                android:layout_height="100dp"
                android:text="@string/HIjohncooper"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="137dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cooperpfp" />

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="215dp"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/Dropreviewwhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop me a review"
                android:textSize="30sp"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/smile" />


        </LinearLayout>


        <!--EMAIL INPUT BAR-->
        <EditText
            android:id="@+id/EmailInputID"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:hint="Type your experience..."
            android:textSize="16sp"
            android:textColor="@color/gray_tone"
            android:textColorHint="@color/gray_tone"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_squircle_input" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="520dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_shape"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_shape"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_shape"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_shape"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_shape"/>
        </LinearLayout>



        <!-- Reset BUTTON -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ResetButtonID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/verify_button_bg_squircle_input"
            android:text="Submit Feedback"
            android:textColor="@color/white" />




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>