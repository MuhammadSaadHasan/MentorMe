<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        ...
    </style>

    <style name="CustomCalendarView">
        <item name="colorAccent">@color/calendar_header</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
    </style>

    <style name="CustomWeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/calendar_header_text</item>
    </style>

    <style name="CustomDateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendar_date_text</item>
        <!-- You can customize the text size and style here as well -->
    </style>


    <!-- Week day text appearance -->
    <style name="WeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/calendar_date_text</item>
    </style>

    <!-- Date text appearance -->
    <style name="DateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendar_date_text</item>
    </style>


    <style name="MyWidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="MyWidgetEditText">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_tone</item>
        <item name="android:textColorHint">@color/gray_tone</item>
        <item name="android:background">@drawable/bg_squircle_input</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="MyWidgetSpinner">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:entries">@array/status_array</item>
        <item name="android:background">@drawable/bg_squircle_input</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="MyWidgetBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/Dark_teal</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@color/transparent</item>
        <item name="itemTextAppearanceActiveBoldEnabled">true</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>






</resources>
