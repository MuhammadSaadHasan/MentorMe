<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        ...
    </style>

    <style name="CustomCalendarView">
        <item name="colorAccent">@color/calendar_header</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
    </style>

    <style name="CustomWeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/calendar_header_text</item>
    </style>

    <style name="CustomDateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendar_date_text</item>
        <!-- You can customize the text size and style here as well -->
    </style>


    <!-- Week day text appearance -->
    <style name="WeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/calendar_date_text</item>
    </style>

    <!-- Date text appearance -->
    <style name="DateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendar_date_text</item>
    </style>


    <style name="MyWidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="MyWidgetEditText">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_tone</item>
        <item name="android:textColorHint">@color/gray_tone</item>
        <item name="android:background">@drawable/bg_squircle_input</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="MyWidgetSpinner">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:entries">@array/status_array</item>
        <item name="android:background">@drawable/bg_squircle_input</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <style name="MyWidgetBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/Dark_teal</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@color/transparent</item>
        <item name="itemTextAppearanceActiveBoldEnabled">true</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Add a new style for your TextViews. -->
    <style name="TopMentorsTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Dark_teal</item>
    </style>

    <style name="ViewAllTextView" parent="TopMentorsTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <!-- Style for FrameLayout -->
    <style name="MentorCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Style for the main mentor image -->
    <style name="MentorImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/square_shape</item>
    </style>

    <style name="MentorNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style for Mentor's Session Rate TextView -->
    <style name="MentorSessionRateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:textColor">@color/sunflower_yellow</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AvailabilityTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3EAC01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!-- Style for Mentor's Title TextView -->
    <style name="MentorTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Style for Heart Icon ImageView -->
    <style name="HeartIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:src">@drawable/grey_heart</item>
    </style>

    <!-- Style for the mentor details container -->
    <style name="MentorDetailsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginTop">95dp</item>
    </style>

    <!-- Style for the availability indicator -->
    <style name="AvailabilityIndicator">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/green_circle_shape</item>
    </style>











</resources>


